{
	"name": "@mbakereth/combitable",
	"version": "0.0.5",
	"private": false,
	"license": "Apache-2.0",
	"description": "SvelteKit table component using TailwindCSS and Daisy UI",
	"scripts": {
		"dev": "dotenv -e .env -- vite dev",
		"build": "dotenv -e .env -- vite build && npm run package",
		"preview": "dotenv -e .env -- vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "dotenv -e .env -- vitest",
		"test": "dotenv -e .env -- npm run test:unit -- --run",
		"prisma": "dotenv -e .env npm exec prisma"
	},
	"prisma": {
		"seed": "dotenv -e .env tsx prisma/seed.ts"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": ">=4.0.0"
	},
	"devDependencies": {
		"@prisma/client": "^5.21.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^22.8.6",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.7.2",
		"dotenv-cli": "^7.3.0",
		"postcss": "^8.4.35",
		"prisma": "^5.21.1",
		"publint": "^0.2.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"tsx": "^4.19.2",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^2.0.4"
	}
}
